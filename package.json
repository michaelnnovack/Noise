{
  "name": "noise-detector-web-app",
  "version": "1.0.0",
  "description": "Browser-based noise level detector with real-time decibel measurements",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 3000 -c-1",
    "dev": "npx live-server --port=3000 --no-browser --cors",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli -o dist/styles.min.css css/styles.css css/gauge.css css/responsive.css",
    "minify-js": "npx terser js/*.js -o dist/app.min.js --compress --mangle",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "lint": "npx eslint js/*.js",
    "lint:fix": "npx eslint js/*.js --fix",
    "validate": "npx html-validate index.html privacy.html terms.html",
    "lighthouse": "npx lighthouse http://localhost:3000 --output-path=./lighthouse-report.html",
    "deploy:netlify": "npx netlify deploy --prod",
    "deploy:vercel": "npx vercel --prod"
  },
  "keywords": [
    "noise detector",
    "decibel meter",
    "sound level",
    "audio processing",
    "web audio api",
    "noise measurement",
    "sound monitoring"
  ],
  "author": "Noise Detector Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/noise-detector-web-app.git"
  },
  "bugs": {
    "url": "https://github.com/username/noise-detector-web-app/issues"
  },
  "homepage": "https://noise-detector.netlify.app",
  "devDependencies": {
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.45.0",
    "html-validate": "^8.1.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "lighthouse": "^10.4.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^15.8.0",
    "terser": "^5.19.0",
    "vercel": "^31.0.0"
  },
  "dependencies": {},
  "browserslist": [
    "Chrome >= 66",
    "Firefox >= 60",
    "Safari >= 11.1",
    "Edge >= 79",
    "iOS >= 11.3",
    "Android >= 5.0"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-trailing-spaces": "error"
    },
    "globals": {
      "AudioContext": "readonly",
      "webkitAudioContext": "readonly",
      "MediaStreamAudioSourceNode": "readonly"
    }
  }
}